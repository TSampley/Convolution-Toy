<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="ClearButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_back</item>
        <item name="android:alpha">.7</item>
    </style>

    <style name="ClearText" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:background">@drawable/button_back</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
